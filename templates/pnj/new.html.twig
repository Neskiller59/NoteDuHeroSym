{% extends 'base.html.twig' %}

{% block title %}
    {{ pnj is defined ? 'Modifier PNJ' : 'Créer PNJ' }}
{% endblock %}

{% block body %}
<div class="container mt-5" style="background: rgba(30,30,50,0.9); padding: 2rem; border-radius: 15px; box-shadow: 0 0 20px #ffd700;">
    <h1 class="h3 mb-4 text-gold" style="text-shadow: 2px 2px 5px #000;">
        {{ pnj is defined ? 'Modifier PNJ' : 'Créer un PNJ' }}
    </h1>

    <form method="post" class="row g-3 text-gold">
        <div class="col-md-6">
            <label for="name" class="form-label">Nom</label>
            <input type="text" id="name" name="name" class="form-control" required
                   value="{{ pnj.name|default('') }}" 
                   style="background: rgba(0,0,0,0.6); color: #f5e1a4; border: 1px solid #ffd700;">
        </div>

        <div class="col-md-6">
            <label for="localisation" class="form-label">Localisation</label>
            <input type="text" id="localisation" name="localisation" class="form-control"
                   value="{{ pnj.localisation|default('') }}" 
                   style="background: rgba(0,0,0,0.6); color: #f5e1a4; border: 1px solid #ffd700;">
        </div>

        <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" rows="3" required
                      style="background: rgba(0,0,0,0.6); color: #f5e1a4; border: 1px solid #ffd700;">{{ pnj.description|default('') }}</textarea>
        </div>

        <div class="col-12">
            <label for="personaliter" class="form-label">Personnalité</label>
            <textarea id="personaliter" name="personaliter" class="form-control" rows="2"
                      style="background: rgba(0,0,0,0.6); color: #f5e1a4; border: 1px solid #ffd700;">{{ pnj.personaliter|default('') }}</textarea>
        </div>

        <div class="col-12">
            <label for="competence" class="form-label">Compétences</label>
            <textarea id="competence" name="competence" class="form-control" rows="2"
                      style="background: rgba(0,0,0,0.6); color: #f5e1a4; border: 1px solid #ffd700;">{{ pnj.competence|default('') }}</textarea>
        </div>

        <div class="col-12">
            <label for="information" class="form-label">Informations supplémentaires</label>
            <textarea id="information" name="information" class="form-control" rows="2"
                      style="background: rgba(0,0,0,0.6); color: #f5e1a4; border: 1px solid #ffd700;">{{ pnj.information|default('') }}</textarea>
        </div>

        <div class="col-12 d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-gold">
                {{ pnj is defined ? 'Modifier' : 'Créer' }}
            </button>
            <a href="{{ path('pnj_list') }}" class="btn btn-outline-warning">Annuler</a>
        </div>
    </form>
</div>

<style>
    .text-gold { color: #f5e1a4 !important; }
    .btn-gold {
        background: linear-gradient(to right, #ffd700, #f5e1a4);
        color: #000;
        font-weight: bold;
        border: 2px solid #f5e1a4;
        text-shadow: 1px 1px 2px #000;
    }
    .btn-gold:hover {
        background: linear-gradient(to right, #f5e1a4, #ffd700);
        color: #000;
        transform: scale(1.05);
        transition: 0.2s;
    }
</style>
{% endblock %}
