{% extends 'base.html.twig' %}

{% block title %}Inscription - Guilde des Aventuriers{% endblock %}

{% block body %}

<div class="register-container">
    <h1>Inscris-toi, Héros</h1>

    {% if registrationForm.vars.errors|length > 0 %}
        <div class="form-error-message">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }} {# Champ email ajouté ici #}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "J'accepte le serment de la Guilde"
        }) }}

        <button type="submit" class="btn">Rejoindre la Guilde</button>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}
