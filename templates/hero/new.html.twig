{% extends 'base.html.twig' %}

{% block title %}Créer un héros{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Créer un nouveau héros</h1>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.universe) }}
            {{ form_widget(form.universe, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.universe) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.photo) }}
            {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.photo) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.additionalInfo) }}
            {{ form_widget(form.additionalInfo, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {{ form_errors(form.additionalInfo) }}
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Créer le héros</button>
    {{ form_end(form) }}
</div>
{% endblock %}
