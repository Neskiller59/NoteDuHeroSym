{% extends 'base.html.twig' %}

{% block title %}Comp√©tences de {{ hero.name }}{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width:1000px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold">Comp√©tences de {{ hero.name }}</h1>
        {# ‚úÖ On passe heroId pour que la route fonctionne correctement #}
        <a href="{{ path('competence_new', { heroId: hero.id }) }}" class="btn btn-outline-primary">
            ‚ûï Nouvelle comp√©tence
        </a>
    </div>

    {% if competences is empty %}
        <div class="alert alert-secondary">Aucune comp√©tence trouv√©e pour ce h√©ros.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Effet</th>
                        <th>Origine</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for competence in competences %}
                        <tr>
                            <td>{{ competence.name }}</td>
                            <td>{{ competence.description|length > 50 ? competence.description|slice(0, 50) ~ '...' : competence.description }}</td>
                            <td>{{ competence.effet }}</td>
                            <td>{{ competence.origine }}</td>
                            <td class="text-end">
                                {# ‚úÖ Edit inclut heroId #}
                                <a href="{{ path('competence_edit', { heroId: hero.id, id: competence.id }) }}" 
                                   class="btn btn-sm btn-outline-secondary me-1" title="√âditer {{ competence.name }}">
                                    ‚úèÔ∏è
                                </a>

                                {# ‚úÖ Delete inclut heroId #}
                                <form method="post" action="{{ path('competence_delete', { heroId: hero.id, id: competence.id }) }}" 
                                      style="display:inline;" 
                                      onsubmit="return confirm('Voulez-vous vraiment supprimer cette comp√©tence ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competence.id) }}">
                                    <button class="btn btn-sm btn-outline-danger" type="submit" title="Supprimer {{ competence.name }}">
                                        üóë
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    {# --- Messages flash --- #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}
