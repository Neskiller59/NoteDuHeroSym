{% extends 'base.html.twig' %}

{% block title %}Compétences de {{ hero.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="h3 fw-bold mb-3">Compétences de {{ hero.name }}</h1>

    <div class="d-flex justify-content-end mb-4">
        {# Créer une nouvelle compétence avec heroId #}
        <a href="{{ path('competence_new', {'heroId': hero.id}) }}" class="btn btn-primary">
            ➕ Créer une compétence
        </a>
    </div>

    {% if competences is empty %}
        <div class="alert alert-secondary">Aucune compétence trouvée pour ce héros.</div>
    {% else %}
        <div class="row g-3">
            {% for competence in competences %}
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <!-- Nom -->
                            <h5 class="card-title fw-bold" style="word-break: break-word; overflow-wrap: anywhere;">
                                {{ competence.name }}
                            </h5>

                            <!-- Description -->
                            <p class="card-text mb-2" style="white-space: normal; word-break: break-word; overflow-wrap: anywhere;">
                                {{ competence.description }}
                            </p>

                            <!-- Effet et Origine -->
                            <div class="mb-3">
                                {% if competence.effet %}
                                    <span class="badge bg-info text-dark d-block w-100 mb-1">
                                        Effet: {{ competence.effet }}
                                    </span>
                                {% endif %}
                                {% if competence.origine %}
                                    <span class="badge bg-secondary d-block w-100">
                                        Origine: {{ competence.origine }}
                                    </span>
                                {% endif %}
                            </div>

                            <!-- Boutons -->
                            <div class="mt-auto d-flex justify-content-end">
                                <a href="{{ path('competence_edit', {'heroId': hero.id, 'id': competence.id}) }}" 
                                   class="btn btn-sm btn-outline-secondary me-2">
                                     Éditer
                                </a>

                                <form method="post" action="{{ path('competence_delete', {'heroId': hero.id, 'id': competence.id}) }}" 
                                      style="display:inline;" 
                                      onsubmit="return confirm('Voulez-vous vraiment supprimer cette compétence ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competence.id) }}">
                                    <button class="btn btn-sm btn-outline-danger" type="submit">
                                         Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
